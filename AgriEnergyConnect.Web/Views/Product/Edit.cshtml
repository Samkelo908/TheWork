@model UpdateProductModel

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h2 class="h4 mb-0"><i class="bi bi-pencil-square me-2"></i> Edit Product</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Name" class="form-control" placeholder="Product Name" required />
                                    <label asp-for="Name" class="form-label"></label>
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="Category" class="form-select" required>
                                        <option value="">Select Category</option>
                                        <option value="Vegetables">Vegetables</option>
                                        <option value="Fruits">Fruits</option>
                                        <option value="Grains">Grains</option>
                                        <option value="Livestock">Livestock</option>
                                        <option value="Dairy">Dairy</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <label asp-for="Category" class="form-label"></label>
                                    <span asp-validation-for="Category" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <textarea asp-for="Description" class="form-control" placeholder="Product Description" style="height: 100px"></textarea>
                                    <label asp-for="Description" class="form-label"></label>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Price" class="form-control" placeholder="Price" type="number" step="0.01" required />
                                    <label asp-for="Price" class="form-label"></label>
                                    <div class="input-group-text bg-light">ZAR</div>
                                    <span asp-validation-for="Price" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Quantity" class="form-control" placeholder="Quantity" type="number" required />
                                    <label asp-for="Quantity" class="form-label"></label>
                                    <span asp-validation-for="Quantity" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="HarvestDate" type="date" class="form-control" required />
                                    <label asp-for="HarvestDate" class="form-label"></label>
                                    <span asp-validation-for="HarvestDate" class="text-danger small"></span>
                                </div>
                            </div>

                           

                            <div class="col-12 mt-4">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <button type="submit" class="btn btn-success me-md-2 px-4 py-2">
                                        <i class="bi bi-check-circle-fill me-2"></i>Save Changes
                                    </button>
                                    <a asp-action="MyProducts" class="btn btn-outline-secondary px-4 py-2">
                                        <i class="bi bi-x-circle me-2"></i>Cancel
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 10px;
            border: none;
            overflow: hidden;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .form-floating {
            position: relative;
        }

            .form-floating > label {
                color: #6c757d;
                padding: 0.5rem 0.75rem;
            }

        .form-control, .form-select {
            border-radius: 8px;
            padding: 1rem 0.75rem;
            border: 1px solid #ced4da;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #2e7d32;
                box-shadow: 0 0 0 0.25rem rgba(46, 125, 50, 0.25);
            }

        .btn-success {
            background-color: #2e7d32;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-success:hover {
                background-color: #1b5e20;
                transform: translateY(-2px);
            }

        .input-group-text {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            z-index: 5;
        }

        .img-thumbnail {
            border-radius: 6px;
            border: 1px solid #dee2e6;
            padding: 0.25rem;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        
        document.addEventListener('DOMContentLoaded', function() {
            const categorySelect = document.querySelector('select[name="Category"]');
            if (categorySelect && '@Model.Category') {
                categorySelect.value = '@Model.Category';
            }
        });
    </script>
}