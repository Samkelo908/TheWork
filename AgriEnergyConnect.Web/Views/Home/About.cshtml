@{
    ViewData["Title"] = "About Us";
}

<div class="hero-section" style="background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1523348837708-15d4a09cfac2?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80')">
    <div class="container">
        <h1 class="hero-title">Our Story</h1>
        <p class="hero-subtitle">
            Connecting South African farmers with sustainable energy solutions since 2023
        </p>
    </div>
</div>

<section class="mission-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h2 class="section-title">Who We Are</h2>
                <p class="lead">
                    AgriEnergyConnect was founded in Pretoria with a vision to revolutionize South Africa's agricultural sector through sustainable energy solutions. Our team combines agricultural expertise with renewable energy technology to create innovative solutions tailored for African farmers.
                </p>
                <p>
                    We believe that the future of farming lies in sustainable practices that reduce environmental impact while increasing productivity and profitability.
                </p>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1586771107445-d3ca888129ce?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
                     alt="Farm with solar panels" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center section-title">Our Values</h2>
