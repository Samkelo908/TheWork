@model AgriEnergyConnect.Web.Models.LoginModel

@{
    ViewData["Title"] = "Login to AgriEnergyConnect";
    
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <img src="/images/logo-green.png" alt="AgriEnergyConnect Logo" class="auth-logo">
            <h2 class="auth-title">Welcome Back</h2>
            <p class="auth-subtitle">Sign in to your farmer account</p>
        </div>

        <form asp-action="Login" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                <label asp-for="Email">Email Address</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            
               
            <button type="submit" class="btn btn-success w-100 py-2 mb-3">
                <i class="bi bi-box-arrow-in-right me-2"></i> Login
            </button>

            <div class="auth-footer text-center">
                <p class="mb-0">Don't have an account? <a asp-action="Register" class="text-success fw-bold">Sign up</a></p>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --primary-green: #2e7d32;
            --light-green: #e8f5e9;
        }

        body {
            background-color: #f8f9fa;
        }

        .auth-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh;
            padding: 2rem;
        }

        .auth-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            width: 100%;
            max-width: 420px;
            overflow: hidden;
        }

        .auth-header {
            padding: 2rem 2rem 1rem;
            text-align: center;
            background-color: var(--light-green);
        }

        .auth-logo {
            height: 60px;
            margin-bottom: 1rem;
        }

        .auth-title {
            color: var(--primary-green);
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .auth-subtitle {
            color: #6c757d;
            margin-bottom: 0;
        }

        .auth-form {
            padding: 2rem;
        }

        .form-control {
            border-radius: 8px;
            padding: 1rem;
            border: 1px solid #e0e0e0;
        }

            .form-control:focus {
                border-color: var(--primary-green);
                box-shadow: 0 0 0 0.25rem rgba(46, 125, 50, 0.25);
            }

        .btn-success {
            background-color: var(--primary-green);
            border: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .btn-success:hover {
                background-color: #1b5e20;
                transform: translateY(-2px);
            }

        .form-check-input:checked {
            background-color: var(--primary-green);
            border-color: var(--primary-green);
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
       
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('.auth-form');

            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    </script>
}